apiVersion: v1
kind: PersistentVolume
metadata:
  name: glusterfs 
spec:
  capacity:
      storage: "{{ hostvars[groups['gfs-cluster'][0]].gluster_disk_size_gb }}Gi"
  accessModes:
    - ReadWriteMany
  glusterfs:
    endpoints: glusterfs-cluster
    path: gluster
    readOnly: false
  persistentVolumeReclaimPolicy: Retain
